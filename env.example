# Параметры приложения

# Секретный ключ Django (заполнить обязательно!)
# Например, можно сгенерировать командой:
# python -c 'import secrets; print(secrets.token_hex())'
SECRET_KEY=

# Название приложения (не изменять!)
FLASK_APP=yacut

# Режим запуска приложения
# Для включения режима production закомментируйте строку.
FLASK_ENV=development

# Название хоста и порт
FLASK_RUN_HOST=localhost
FLASK_RUN_PORT=5000

# Параметры подключения к базе данных
DATABASE_URI='sqlite:///db.sqlite3'
